<div id="the-basics">
      <%= form_tag book_search_path, method: "GET" do %>
        <input class="form-control typeahead" type = "text" name = "search" placeholder = "Search for Book"/>
        <button type = "submit" class="btn btn-default" name = "GO"/>
      <% end %>
 </div>
<br>

<% @books.each do |book| %>
	<%= link_to book.name, book_path(book) %> |
	<%= book.author %> |
	<%= book.genre %>
<% end %>