<div class="modal-body">
  <%= form_tag user_sessions_path, :method => :post do %>
    <p>
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </p>
    <p>
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </p>
    <p>
      <%= submit_tag "Login", class:"btn btn-default" %>
    </p>
  <% end %>
</div>